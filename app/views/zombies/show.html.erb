<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @zombie.name %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @zombie.bio %>
</p>

<p>
  <strong>Age:</strong>
  <%= @zombie.age %>
</p>

<h3>Decomposition Phase:</h3>
<span id="decomp"><%= @zombie.decomp %></span>

<div id="custom_phase">
	<%= form_for @zombie, url: custom_decomp_zombie_path(@zombie), method: :put, remote: true do |f| %>
		<strong>Custom Phase</strong>
		<%= f.text_field :decomp %>
		<%= f.submit "Set" %>
	<% end %>
</div>

<div id="custom_phase_two">
	<%= form_for @zombie, url: custom_decomp_zombie_path(@zombie) do |f| %>
		<strong>Custom Phase via JSON</strong>
		<%= f.text_field :decomp %>
		<%= f.submit "Set" %>
	<% end %>
</div>


<%= link_to 'Edit', edit_zombie_path(@zombie) %> |
<%= link_to 'Back', zombies_path %>
