<p id="notice"><%= notice %></p>

<h1>Brains for Zombie <%= @zombie.id %></h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Flavor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brains.each do |brain| %>
      <tr>
        <td><%= brain.status %></td>
        <td><%= brain.flavor %></td>
        <td><%= link_to 'Show', [@zombie, brain] %></td>
        <td><%= link_to 'Edit', edit_zombie_brain_path(@zombie, brain) %></td>
        <td><%= link_to 'Destroy', [@zombie, brain], method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Brain', new_zombie_brain_path(@zombie) %>
